{
  "openapi": "3.0.0",
  "info": {
    "title": "Atlas Documentation",
    "description": "Esta é uma documentação sobre a Atlas API",
    "version": "1.0.0",
    "contact": {
      "email": "dani@rocketseat.com.br"
    }
  },
  "tags": [
    {
      "name": "users",
      "description": "Gerenciamento de usuários"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "tags": [
          "users"
        ],
        "summary": "Cria um novo usuário.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Diego Fernandes",
                  "email": "diego.fernandes@rocketseat.com.br"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Operação realizada com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "admin": {
                      "type": "boolean"
                    },
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "admin": false,
                    "id": "asf0a9efa0f0aefj0a0ava0foa0fdsfjsda0f",
                    "name": "Diego Fernandes",
                    "email": "diego.fernandes@rocketseat.com.br",
                    "created_at": "2021-05-28T20:45:04.759Z",
                    "updated_at": "2021-05-29T20:45:04.759Z"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Este e-mail já está sendo utilizado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": "string"
                  },
                  "example": {
                    "error": "User already exists."
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Retorna todos os usuários.",
        "description": "Somente um usuário `admin` pode acessar este módulo.",
        "parameters": [
          {
            "in": "header",
            "name": "user_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "admin": {
                        "type": "boolean"
                      },
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      },
                      "updated_at": {
                        "type": "string"
                      }
                    },
                    "example": [
                      {
                        "admin": true,
                        "id": "asf0a9efa0f0aefj0a0ava0foa0fdsfjsda0f",
                        "name": "Diego Fernandes",
                        "email": "diego.fernandes@rocketseat.com.br",
                        "created_at": "2021-05-28T20:45:04.759Z",
                        "updated_at": "2021-05-29T20:45:04.759Z"
                      },
                      {
                        "admin": false,
                        "id": "asf0aefj0afe00aj0ejf0aejf0ajf0es0fj0aejf0eafj",
                        "name": "Thaissa da Rocket",
                        "email": "thaissa@rocketseat.com.br",
                        "created_at": "2021-05-15T17:40:04.759Z",
                        "updated_at": "2021-05-28T20:45:04.759Z"
                      }
                    ]
                  }
                }
              }
            }
          },
          "400": {
            "description": "Este usuário não possui permissão OU não foi encontrado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": "string"
                  },
                  "example": {
                    "error": "Only Admin's can access the list."
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Retorna um usuário específico.",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "description": "ID do usuário",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "admin": {
                      "type": "boolean"
                    },
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "admin": true,
                    "id": "asf0a9efa0f0aefj0a0ava0foa0fdsfjsda0f",
                    "name": "Diego Fernandes",
                    "email": "diego.fernandes@rocketseat.com.br",
                    "created_at": "2021-05-28T20:45:04.759Z",
                    "updated_at": "2021-05-29T20:45:04.759Z"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Este usuário não foi encontrado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": "string"
                  },
                  "example": {
                    "error": "User not found"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": [
          "users"
        ],
        "summary": "Conceder permissão de Admin a um usuário.",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "admin": {
                      "type": "boolean"
                    },
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "admin": true,
                    "id": "asf0a9efa0f0aefj0a0ava0foa0fdsfjsda0f",
                    "name": "Diego Fernandes",
                    "email": "diego.fernandes@rocketseat.com.br",
                    "created_at": "2021-05-28T20:45:04.759Z",
                    "updated_at": "2021-05-29T20:45:04.759Z"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Este usuário não foi encontrado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": "string"
                  },
                  "example": {
                    "error": "User not found"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
